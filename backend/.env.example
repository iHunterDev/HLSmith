# Database Configuration
DB_PATH=./storage/database.sqlite

# Server Configuration
BASE_URL=http://localhost:3001
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-secret-key-here

# Queue Configuration
MAX_CONCURRENT=1

# Storage Configuration
STORAGE_PATH=./storage

# File Upload Configuration
UPLOAD_MAX_SIZE=2147483648
COVER_MAX_SIZE=10485760

# FFmpeg Configuration
FFMPEG_TIMEOUT=1800000

# Registration Control Configuration
ALLOW_REGISTRATION=false
ALLOW_FIRST_ADMIN_REGISTRATION=true

# Viewer Key Configuration (optional, defaults to JWT_SECRET if not set)
# VIEWER_KEY_SECRET=your-viewer-key-secret-here